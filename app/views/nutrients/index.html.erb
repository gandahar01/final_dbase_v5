<div class="page-header">
  <h1>
    Nutrients
    <a href="/nutrients/new" class="btn btn-lg btn-success">New Nutrient</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Nutrients category</th>
        <th>Nutrients unit of measure</th>
        <th>Nutrients name</th>
        <th>Actions</th>
      </tr>

      <% @nutrients.each do |nutrient| %>
      <tr>
        <td><%= nutrient.nutrients_category %></td>
        <td><%= nutrient.nutrients_unit_of_measure %></td>
        <td><%= nutrient.nutrients_name %></td>
        <td>
          <a href="/nutrients/<%= nutrient.id %>" class="btn btn-primary">Show</a>
          <a href="/nutrients/<%= nutrient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_nutrient/<%= nutrient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @nutrients, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
