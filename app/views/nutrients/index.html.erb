<div class="page-header">
  <h1>
    Nutrients
    <a href="/nutrients/new" class="btn btn-lg btn-success">New Nutrient</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "nutrients_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :nutrients_category_cont, "Nutrients category contains" %>
    <%= f.text_field :nutrients_category_cont, :class => "form-control", :placeholder => "Nutrients category contains" %>
  </div>

<div class="form-group">
    <%= f.label :nutrients_name_cont, "Nutrients name contains" %>
    <%= f.text_field :nutrients_name_cont, :class => "form-control", :placeholder => "Nutrients name contains" %>
  </div>

<div class="form-group">
    <%= f.label :nutrients_unit_of_measure_cont, "Nutrients unit of measure contains" %>
    <%= f.text_field :nutrients_unit_of_measure_cont, :class => "form-control", :placeholder => "Nutrients unit of measure contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :foods_details_quantity, "FoodsDetail Foods details quantity" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :foods_details_foods_details_quantity_gteq, :class => "form-control", :placeholder => "FoodsDetail Foods details quantity greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :foods_details_foods_details_quantity_lteq, :class => "form-control", :placeholder => "FoodsDetail Foods details quantity less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :servings, "CheatFood Servings" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :cheat_foods_servings_gteq, :class => "form-control", :placeholder => "CheatFood Servings greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :cheat_foods_servings_lteq, :class => "form-control", :placeholder => "CheatFood Servings less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :foods_foods_name_cont, "Food foods_name contains" %>
      <%= f.text_field :foods_foods_name_cont, :class => "form-control", :placeholder => "Food foods_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/nutrients" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#nutrients_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Nutrients category</th>
        <th>Nutrients unit of measure</th>
        <th>Nutrients name</th>
        <th>Actions</th>
      </tr>

      <% @nutrients.each do |nutrient| %>
      <tr>
        <td><%= nutrient.nutrients_category %></td>
        <td><%= nutrient.nutrients_unit_of_measure %></td>
        <td><%= nutrient.nutrients_name %></td>
        <td>
          <a href="/nutrients/<%= nutrient.id %>" class="btn btn-primary">Show</a>
          <a href="/nutrients/<%= nutrient.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_nutrient/<%= nutrient.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @nutrients, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
