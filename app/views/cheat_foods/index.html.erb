<div class="page-header">
  <h1>
    Cheat foods
    <a href="/cheat_foods/new" class="btn btn-lg btn-success">New Cheat food</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Servings</th>
        <th>Day of cheat</th>
        <th>User</th>
        <th>Foods</th>
        <th>Actions</th>
      </tr>

      <% @cheat_foods.each do |cheat_food| %>
      <tr>
        <td><%= cheat_food.servings %></td>
        <td><%= cheat_food.day_of_cheat %></td>
        <td><%= cheat_food.user.email %></td>
        <td><%= cheat_food.foods.foods_name %></td>
        <td>
          <a href="/cheat_foods/<%= cheat_food.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == cheat_food.user %>
            <a href="/cheat_foods/<%= cheat_food.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_cheat_food/<%= cheat_food.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cheat_foods, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
